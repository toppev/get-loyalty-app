{
  "env": {
    "node": true,
    "commonjs": true,
    "es6": true,
    "jest/globals": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "rules": {
    "no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "none",
        "ignoreRestSiblings": false
      }
    ],
    "indent": [
      "warn",
      2
    ],
    "semi": [
      "warn",
      "never"
    ]
  },
  "plugins": [
    "jest"
  ]
}
